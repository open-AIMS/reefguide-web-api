# @name createSuitabilityJob
POST {{baseUrl}}/jobs
Content-Type: {{contentType}}
Authorization: Bearer {{authToken}}

{
    "type": "SUITABILITY_ASSESSMENT",
    "inputPayload": {
        "region": "Mackay-Capricorn",
        "reef_type": "slopes",
        "depth_min": -10.1,
